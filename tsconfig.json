{
	"compilerOptions": {
		"target": "ESNext",
		"module": "preserve",
		"allowJs": true,
		"checkJs": false,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@types": ["types/index.ts"],
			"@types/*": ["types/*"]
		},
		"strict": true,
		"skipLibCheck": true,
		"noImplicitThis": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["lib/**/**/*", "src/**/**/*"]
}
