{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"rootDir": ".",
		"strict": true,
		"skipLibCheck": true,
		"noImplicitThis": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["types", "src", "plugins", "*.ts", "*.mts"]
}
