{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"outDir": "build",
		"rootDir": "./src",
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/**/*"],
	"exclude": ["build/**"]
}
